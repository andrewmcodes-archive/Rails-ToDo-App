<!DOCTYPE html>
<html>
  <head>
    <title>Todoapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700|PT+Serif:700" rel="stylesheet">
  </head>

  <body>
  <header>
    <% flash.each do |key, value| %>
      <div id="alert"class="alert<%= key %>"><%= value %>

      </div>
    <% end %>
    <h1 class="page-title">ToDo List App</h1>
  </header>
  <div class="container">

    <%= yield %>
  </div>

  </body>
</html>
